set -euf -o pipefail +o nounset

function absPath() {
  local dest=${1}
  dest=$( python -c "import os; print os.path.realpath('${dest}')" )
  echo ${dest}
}

function dirName() {
  local dest=${1}
  dest=$( python -c "import os; print os.path.dirname('${dest}')" )
  echo ${dest}
}

function parDir() {
  local dest=${1}
  dest=$( python -c "import os; print os.path.split(os.path.abspath('${dest}'))[0]" )
  echo ${dest}
}

function install() {
  local dest=${1}
  export SCRIPT_DIR="${BASH_SOURCE[0]}"
  SCRIPT_DIR=$( absPath ${SCRIPT} )

  if [[ ! -d "${SCRIPT_DIR}/${dest}" ]]
  then
    git clone git@git-int.admin:docker-marketplace/fcu-ansible.git ${dest}
    cd ${SCRIPT_DIR}/${dest}
    virtualenv --always-copy .
    . ./bin/activate
    pip install -r requirement-pip
    pip install -r requirement-fcu-ansible
    exit 0
  else
    echo "The project ${dest} Allready exist !!!"
    exit 1
  fi

}

install $1
